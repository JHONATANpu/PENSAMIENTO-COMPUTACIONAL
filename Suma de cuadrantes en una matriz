#include <iostream>
using namespace std;
int main()
{
    int n,temp,suma1=0,suma2=0,suma3=0,suma4=0;
    cout<<"ingrese numero de columnas y filas: ";
    cin>>n;
    int m[n][n];
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            cin>>m[i][j];
        }
    }
    for(int i=0;i<n/2;i++){
        for(int j=0;j<n/2;j++){
            suma2+=m[i][j];
            suma1+=m[(n-1)-i][(n-1)-j];
        }
    }
    for(int i=(n+1)/2;i<n;i++){
        for(int j=0;j<(n/2);j++){
            suma3+=m[i][j];
            suma4+=m[n-1-i][n-1-j];
        }
    }
    cout<<"cuadrante 1: "<<suma1<<endl;
    cout<<"cuadrante 2: "<<suma2<<endl;
    cout<<"cuadrante 3: "<<suma3<<endl;
    cout<<"cuadrante 4: "<<suma4<<endl;

    return 0;
}
